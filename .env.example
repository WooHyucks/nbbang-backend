# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nbbang

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT
JWT_SECRET_KEY=your-jwt-secret-key

# Encryption
ENCRYPT_KEY=your-encryption-key-base64-or-utf8

# Server
PORT=3001
NODE_ENV=development
SERVICE_ENV=dev

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_REDIRECT_URL=http://localhost:5173/auth/kakao/callback
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_STATE=your-naver-state

# AWS S3
AWS_S3_ACCESS_KEY=your-aws-access-key
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=nbbang-receipt-images
AWS_S3_REGION=ap-northeast-2

# Exchange Rate API (for trip mode)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
